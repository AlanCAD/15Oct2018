//size(500,500);
//line(250,0,250,250);
//line(250,250,0,500);
//line(250,250,500,500);
int x1=250;
int y1=0;
int x2=0;
int y2=500;
int x3=500;
int y3=500;

void setup(){
size(500,500);	
}

void draw(){  
background(250);
line(250,y1,250,250);
line(250,250,x2,y2);
line(250,250,x3,y3);
y1++;
y2--;
x2++;
x3--;
y3--;
}
